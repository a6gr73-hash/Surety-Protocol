{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist"
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./contracts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}